
<h1>Admin felület</h1>
<h2>Új recept felvétele</h2>
<form method="POST" action="/recipes/add" enctype="multipart/form-data">
  <div>
    <label for="nev">Név:</label>
    <input type="text" id="nev" name="nev" required>
  </div>
  <div>
    <label for="kep">Kép (fájl feltöltése):</label>
    <input type="file" id="kep" name="kep" accept="image/*">
  </div>
  <div>
    <label for="leiras">Leírás:</label>
    <textarea id="leiras" name="leiras" required></textarea>
  </div>
  <div>
    <label for="hozzavalok">Hozzávalók:</label>
    <textarea id="hozzavalok" name="hozzavalok" required></textarea>
  </div>
  <div>
    <label for="keszitesi_utmutato">Készítési útmutató:</label>
    <textarea id="keszitesi_utmutato" name="keszitesi_utmutato" required></textarea>
  </div>
  <div>
    <label for="elokeszitesi_ido">Előkészítési idő (perc):</label>
    <input type="number" id="elokeszitesi_ido" name="elokeszitesi_ido" required>
  </div>
  <div>
    <label for="sutesi_ido">Sütési idő (perc):</label>
    <input type="number" id="sutesi_ido" name="sutesi_ido" required>
  </div>
  <div>
    <label for="adagok_szama">Adagok száma:</label>
    <input type="number" id="adagok_szama" name="adagok_szama" required>
  </div>
  <button type="submit">Recept mentése</button>
</form>

<h2>Receptek szerkesztése</h2>
<% if (recipes && recipes.length > 0) { %>
  <% recipes.forEach(recipe => { %>
    <div>
      <h3><%= recipe.nev %></h3> <!-- 'name' helyett 'nev' -->
      <p><strong>Leírás:</strong> <%= recipe.leiras %></p>
      <p><strong>Hozzávalók:</strong> <%= recipe.hozzavalok %></p>
      <a href="/recipes/edit/<%= recipe.id %>">Szerkesztés</a>
    </div>
  <% }) %>
<% } else { %>
  <p>Nincs még recept az adatbázisban.</p>
<% } %>